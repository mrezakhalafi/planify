<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

<!--    BELAJAR UI LAYOUT -->

    <TextView
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Constraint Layout"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
        android:id="@+id/box1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Box 1"
        android:textSize="24sp"
        android:padding="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/box2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Box 2"
        android:textSize="24sp"
        android:padding="20dp"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toRightOf="@id/box1"/>

    <TextView
        android:id="@+id/box3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Box 3"
        android:textSize="24sp"
        android:padding="20dp"
        android:background="@color/gray_dark"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/box4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Box 4"
        android:textSize="24sp"
        android:padding="20dp"
        android:background="@color/purple_light"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/box1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box4">

        <TextView
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="10dp"
            android:text="Relative Layout"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/box5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:background="@color/black"
            android:padding="20dp"
            android:text="Box 5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/box6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_toRightOf="@+id/box5"
            android:background="@color/purple"
            android:padding="20dp"
            android:text="Box 6"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/box7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:background="@color/gray_dark"
            android:padding="20dp"
            android:text="Box 7"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/box8"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box5"
            android:layout_alignParentLeft="true"
            android:background="@color/purple_light"
            android:padding="20dp"
            android:text="Box 8"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linear Layout"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/subLinear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/box9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Box 9"
                android:textSize="24sp"
                android:padding="20dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/box10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Box 10"
                android:textSize="24sp"
                android:padding="20dp"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/box11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Box 11"
                android:textSize="24sp"
                android:padding="20dp"
                android:background="@color/gray_dark"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subLinear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/box12"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Box 12"
                android:textSize="24sp"
                android:padding="20dp"
                android:background="@color/purple_light"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:columnCount="4"
        android:rowCount="3">

        <TextView
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Grid Layout"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/box13"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Box 13"
            android:textSize="24sp"
            android:padding="20dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/box14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Box 14"
            android:textSize="24sp"
            android:padding="20dp"
            android:background="@color/purple"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/box15"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Box 15"
            android:textSize="24sp"
            android:padding="20dp"
            android:background="@color/gray_dark"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="3"/>

        <TextView
            android:id="@+id/box16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Box 16"
            android:textSize="24sp"
            android:padding="20dp"
            android:background="@color/purple_light"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_column="0"/>

    </GridLayout>

    <FrameLayout
        android:id="@+id/frameLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gridLayoutContainer"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame Layout"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/box17"
            android:layout_width="100dp"
            android:layout_marginTop="45dp"
            android:layout_height="match_parent"
            android:text="Box 17"
            android:textSize="24sp"
            android:padding="20dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/box18"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="45dp"
            android:text="Box 18"
            android:textSize="24sp"
            android:padding="20dp"
            android:background="@color/purple"
            android:textColor="@color/white"
            android:textAlignment="center"/>

    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutContainer"
        app:layout_constraintLeft_toLeftOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Table Layout"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@color/gray" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/box19"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Box 19"
                android:textSize="24sp"
                android:padding="20dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAlignment="center"
            />

            <TextView
                android:id="@+id/box20"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Box 20"
                android:textSize="24sp"
                android:padding="20dp"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:textAlignment="center"
                />

        </TableRow>

    </TableLayout>

<!--    BELAJAR COMPONENT BUTTON -->

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>