<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:layout_marginBottom="?actionBarSize"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPurple"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/rounded_bottom_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profilePicture"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="-180dp"
            app:cardCornerRadius="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mrezakhalafi"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="M Reza Khalafi"
            android:textAlignment="center"
            android:layout_marginTop="-140dp"
            app:layout_constraintTop_toBottomOf="@+id/profilePicture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="mrezakhalafi@gmail.com"
            android:textAlignment="center"
            android:layout_marginTop="-130dp"
            app:layout_constraintTop_toBottomOf="@+id/profileName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-95dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutPurple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TextView 1 -->
            <TextView
                android:id="@+id/textPhone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="081293291580"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- TextView 2 -->
            <TextView
                android:id="@+id/textPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textPhone1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**********"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textNumber1"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- TextView 3 -->
            <TextView
                android:id="@+id/textPhone3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textPhone2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textNumber2"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textPhone4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textPhone3"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cipinang Elok 1 C/13"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textNumber3"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textPhone5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Version"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textPhone4"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textNumber5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024120411"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textNumber4"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:background="@drawable/rounded_button_fill"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:backgroundTint="@null"
        android:background="@drawable/rounded_button"
        android:textColor="@color/purple"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeProfile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>