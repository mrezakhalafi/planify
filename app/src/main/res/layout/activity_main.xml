<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:scaleType="fitXY"
        android:src="@drawable/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planify."
            android:textColor="@color/purple"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textFontWeight="800"
            android:fontFamily="serif"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splashscreen"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:text="How Your Day?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="35sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Planify, where you can manage your daily task and activities"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@color/gray_dark"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textFontWeight="400"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginStart="150px"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="150px"
        android:text="Login"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_fill"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginStart="150px"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="150px"
        android:text="Sign Up"
        android:textColor="@color/purple"
        app:backgroundTint="@null"
        android:background="@drawable/rounded_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Sign Up Using"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@color/gray_dark"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textFontWeight="400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
    
        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="35dp"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/facebook"/>

        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="35dp"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/google"/>

        <ImageView
            android:id="@+id/ivInstagram"
            android:layout_width="38dp"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/instagram"/>

    </LinearLayout>

</LinearLayout>